<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity"
    >

  <Button
      android:id="@+id/buyButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onBuyGasButtonClicked"
      android:text="@string/launch_billing_flow"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <Button
      android:id="@+id/upgradeButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onUpgradeAppButtonClicked"
      android:text="@string/query_purchases"
      app:layout_constraintBottom_toBottomOf="@id/buyButton"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/buyButton"
      />
  <Button
      android:id="@+id/sku_details"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onSkuDetailsButtonClicked"
      android:text="@string/sku_details"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/upgradeButton"
      />

  <Button
      android:id="@+id/makePaymentButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="makePaymentButtonClicked"
      android:text="@string/consume"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/sku_details"
      />
  <Button
      android:id="@+id/closeChannelButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onCloseChannelButtonClicked"
      android:text="@string/closeChannelButton"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/makePaymentButton"
      />
  <Button
      android:id="@+id/isReady"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="checkChannelAvailable"
      android:text="@string/is_ready"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/buyButton"
      />

  <Button
      android:id="@+id/openChannelButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onOpenChannelButtonClicked"
      android:text="@string/openChannelButton"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/isReady"
      />


</android.support.constraint.ConstraintLayout>